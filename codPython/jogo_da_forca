palavra_secreta = input("qual a palavra: ")


word_length = len(palavra_secreta)

fim_de_jogo = False
lives = 6

display = []
for _ in range(word_length):
    display += "_"

while not fim_de_jogo:
    chute = input("Guess a letter: ").lower()

    if chute in display:
        print(f"you've already guessed {chute}")

    for position in range(word_length):
        letter = palavra_secreta[position]
        if letter == chute:
            display[position] = letter

    if chute not in palavra_secreta:
        print(f"you guessed {chute}, that's not in the word. You lose a life.")
        lives -= 1
        if lives == 0:
            fim_de_jogo = True
            print("You lose.")

    print(f"{' '.join(display)}")
    if "_" not in display:
        fim_de_jogo = True
        print("You win.")
